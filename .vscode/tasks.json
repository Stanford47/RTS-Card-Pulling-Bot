{
    "version": "2.0.0",
    "tasks": [
       {
          "label": "Clean",
          "type": "shell",
          "command": "rm",
          "args": [
             "-r",
             "${workspaceFolder}/dist"
          ],
          "group": "none",
          "presentation": {
             "echo": true,
             "reveal": "always",
             "focus": false,
             "panel": "dedicated",
             "showReuseMessage": true,
             "clear": true
          }
       },
       {
          "label": "Build",
          "type": "shell",
          "command": "tsc",
          "args": [
             "--build"
          ],
          "group": "build",
          "presentation": {
             "echo": true,
             "reveal": "always",
             "focus": false,
             "panel": "dedicated",
             "showReuseMessage": true,
             "clear": true
          }
       },
       {
          "label": "Build Clean",
          "dependsOn": ["Clean", "Build"],
          "dependsOrder": "sequence"
       }
    ]
 }